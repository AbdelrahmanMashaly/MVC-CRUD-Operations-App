@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail" method="post">

			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="ResetPassword">
		</form>
	</div>
</div>

@section ValidateClientSide {
	<partial name="_ValidationScriptsPartial" />
}

