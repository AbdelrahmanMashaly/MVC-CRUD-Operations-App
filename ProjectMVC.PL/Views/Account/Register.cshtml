@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>Creative SignUp Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email"></span>
			<input  asp-for="Fname" placeholder="First Name" >
			<input asp-for="Lname" placeholder="Last Name" >

			<input asp-for="Password"  placeholder="Password" required="" >
			<span asp-validation-for="Password"></span>
			<input  asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="ConfirmPassword"></span>

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do u have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidateClientSide {
	<partial name="_ValidationScriptsPartial" />
}
