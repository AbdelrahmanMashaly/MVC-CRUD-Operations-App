@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="Email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-secondary" />
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
  
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(M => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(M => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(M => item.LName)
                </td>
                <td>
                    @Html.DisplayFor(M => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(M => item.Email)
                </td><td>
                    @Html.DisplayFor(M => item.Roles)
                </td>

                
                <partial name="Buttons" model="@item.Id.ToString()">
            </tr>
        }
    </tbody>
</table>


